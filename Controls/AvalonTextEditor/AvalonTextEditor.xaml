<UserControl x:Class="JobViewer.AvalonTextEditor.AvalonTextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:local="clr-namespace:JobViewer.AvalonTextEditor"
             Loaded="EditorLoaded"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <avalonEdit:TextEditor Grid.Column="2" Margin="4"
                            Name="avalonEditCtrl"               
                            FontFamily="Consolas"
                            SyntaxHighlighting="sql"
                            FontSize="10pt"
                            IsReadOnly="True"
                            MouseDoubleClick="avalonEditCtrl_MouseDoubleClick"
                        >
        </avalonEdit:TextEditor>
    </Grid>
</UserControl>
